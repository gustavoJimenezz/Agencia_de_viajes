- 
  var links = [
    { title: 'Home', url: '/' },
    { title: 'Excursiones', url: '/excursions' },
    { title: 'Reserva', url: '' },
    { title: 'Login', url: '' }
    ]

nav(class=[
  'h-full', 
  'flex justify-center items-center gap-3 sm:gap-4 lg:gap-10'
  ])
    each link in links
      a.link(href=link.url, class=[
        'h-full', 
        'p-2', 
        'flex items-center', 
        'hover:text-orange-500',
        'font-bold',
        'text-base sm:text-lg lg:text-xl xl:text-2xl'
        ])= link.title
