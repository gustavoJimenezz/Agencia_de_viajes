div(class="h-full w-full border bg-blue-custom1 flex flex-col text-white font-extrabold")
  div(class="bg-custom-blue-two basis-[90%] grid grid-cols-3 gap-4 p-8")
  
    div(class="grid grid-rows-3 gap-4")
      div(class="border-b-2 border-white justify-center items-center")
        h6(class="pb-2") Descarga la APP
      div(class="right-2 bg-[url('/icons/app_store.png')] bg-contain bg-no-repeat")
      div(class="right-2 bg-[url('/icons/google_play.png')] bg-contain bg-no-repeat")

    div(class="grid grid-rows-3 gap-4")
      div(class="custom-blue-2 border-b-2 border-white")
        h6(class="pb-2") Contacto
      div 
        ul.list-none
          li
            a(class="before:content-[''] before:bg-[url('/icons/icono_correo.png')] before:w-6 before:mr-2 before:h-4 before:inline-block before:bg-contain before:bg-no-repeat") info@codoviajero.tur.ar
          li 
            a(class="before:content-[''] before:bg-[url('/icons/icono_telefono.png')] before:w-6 before:mr-2 before:h-4 before:inline-block before:bg-contain before:bg-no-repeat") (+54) 011 2774 4490 
    
    divdiv(class="grid grid-rows-3 gap-4")
      div(class="border-b-2 border-white")
        h6(class="pb-2") siguenos

      div(class="grid grid-cols-4")
        mixin icon(url)
          div(class=[`bg-[url('${url}')]`,
                    `bg-contain`,
                    `bg-no-repeat`
                    ])
        +icon('/icons/ig.png')
        +icon('/icons/twiter.png')
        +icon('/icons/wsp.png')
        +icon('/icons/facebook.png')

  div(class="basis-[10%] text-center bg-custom-blue-one")
