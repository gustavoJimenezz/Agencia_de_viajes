doctype html
html(lang="es")
  head
    meta(charset='UTF-8')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    title Tailwind Starter Template - Nordic Shop: Tailwind Toolbox
    link(rel='stylesheet', href='/css/styles.css')
    link(href='https://fonts.googleapis.com/css?family=Work+Sans:200,400&display=swap' rel='stylesheet')

div(class="max-w-lg mx-auto mt-8 bg-white rounded-lg shadow-md px-8 py-10 flex flex-col items-center")
  include ../layouts/partials/logoCodigoViajero.pug
  form(id="formSignup" class="w-full flex flex-col gap-4")
      div(class="flex items-start flex-col justify-start")
          label(for="name" class="text-sm text-gray-700  mr-2") First Name:
          input(type="text" id="name" name="name" class="w-full px-3   py-2 rounded-md border border-gray-300  focus:outline-none focus:ring-1 focus:ring-blue-500")
      
      div(class="flex items-start flex-col justify-start")
          label(for="lastname" class="text-sm text-gray-700  mr-2") Last Name:
          input(type="text" id="lastname" name="lastname" class="w-full px-3   py-2 rounded-md border border-gray-300  focus:outline-none focus:ring-1 focus:ring-blue-500")

      div(class="flex items-start flex-col justify-start")
          label(for="email" class="text-sm text-gray-700  mr-2") Email:
          input(type="email" id="email" name="email" class="w-full px-3   py-2 rounded-md border border-gray-300  focus:outline-none focus:ring-1 focus:ring-blue-500")
      
      div(class="flex items-start flex-col justify-start")
          label(for="password" class="text-sm text-gray-700  mr-2") Password:
          input(type="password" id="password" name="password" class="w-full px-3   py-2 rounded-md border border-gray-300  focus:outline-none focus:ring-1 focus:ring-blue-500")
      
      div(class="flex items-start flex-col justify-start")
          label(for="confirmPassword" class="text-sm text-gray-700  mr-2") Confirm Password:
          input(type="password" id="confirmPassword" name="confirmPassword" class="w-full px-3   py-2 rounded-md border border-gray-300 dark:border-gray-700 focus:outline-none focus:ring-1 focus:ring-blue-500")

      div(id="divMessage" class="text-red-500 mt-2")

      button(type="button" id='btnFormSignup' class="bg-blue-500 hover:bg-blue-600 text-white font-medium py-2 px-4 rounded-md shadow-sm") Register

  div(class="mt-4 text-center")
      span(class="text-sm text-gray-500 dark:text-gray-300") Already have an account? 
      a(href="#" class="text-blue-500 hover:text-blue-600") Login

script(src="/js/authSingUp.js")