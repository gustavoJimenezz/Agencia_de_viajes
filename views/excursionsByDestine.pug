extends layouts/layout

block contentMain
  section.py-8(class="w-full mx-auto bg-nordic-gray-light flex pt-12 bg-cover bg-right md:pt-0 md:items-center" style="max-width:1600px;")
    .container.mx-auto.flex.items-center.flex-wrap.pt-4.pb-12
      //- EXCURSIONES
      .w-full.container.mx-auto.flex.items-center.mt-0.px-2.py-3
        h3.w-full.uppercase.tracking-wide.text-center(class='mt-[15px] mb-[30px] text-[2.5rem] font-light')
          | Excursiones
          
      div(class='grid grid-cols-4 gap-8 flex-auto')
        each excursion in excursions
          a(href="#" class="block rounded-lg p-4 shadow-sm shadow-indigo-100")
            img(
              alt=""
              src=`/img/excursions/${excursion.img}`
              class="h-56 w-full rounded-md object-cover"
            )

            div(class="mt-2")
              dl
                div
                  dt(class="sr-only") Title
                  dd(class="font-medium") #{excursion.name}
                  
                div
                  dt(class="sr-only") Description
                  dd(class="text-sm text-gray-500") #{excursion.description}

              div(class="mt-6 flex items-center gap-8 text-xs")
                div(class="sm:inline-flex sm:shrink-0 sm:items-center sm:gap-2")
                  svg(
                    xmlns="http://www.w3.org/2000/svg"
                    width="26"
                    height="26"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="#000000"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                  )
                    line(x1="12" y1="1" x2="12" y2="23")
                    path(d="M17 5H9.5a3.5 3.5 0 0 0 0 7h5a3.5 3.5 0 0 1 0 7H6")


                  div(class="mt-1.5 sm:mt-0")
                    p(class="text-gray-500") Price
                    p(class="font-medium") #{excursion.price}

                div(class="sm:inline-flex sm:shrink-0 sm:items-center sm:gap-2")
                  svg(
                      xmlns="http://www.w3.org/2000/svg"
                      width="26"
                      height="26"
                      viewBox="0 0 24 24"
                      fill="none"
                      stroke="#000000"
                      stroke-width="2"
                      stroke-linecap="round"
                      stroke-linejoin="round"
                    )
                      path(d="M12 22a10 10 0 1 0 0-20 10 10 0 0 0 0 20z")
                      path(d="M19 6l-7 6V2.5")

                  div(class="mt-1.5 sm:mt-0")
                    p(class="text-gray-500") Duration
                    p(class="font-medium") #{excursion.duration} hs

      //- NUESTRO COMPROMISO
      div(class='min-h-80 bg-[#ece5e9] mt-10 w-full')
        div(class=[`max-w-[80rem]`,
                    `m-auto`,
                    `grid grid-rows-2 grid-cols-4`,
                    `place-items-center`,
                    `text-center`])

          div(class=[`col-span-4`])
            h4(class='text-2xl font-semibold')
              |Nuestro Compromiso
            p(class='text-orange-600 text-xl italic')
              |Esto es lo que nos diferencia y lo que nos hace unicos.
          div()
            img(src="/icons/experiencias-reales.png", alt="Icono extrella", class='max-h-20 object-cover mx-auto')
            p(class="text-xl font-semibold pt-4")
              |Experiencias Reales

          div()
            img(src="/icons/reservas-flexibles.png", alt="Icono calendarioo", class='max-h-20 object-cover mx-auto')
            p(class="text-xl font-semibold pt-4")
              |Reservas Flexibles

          div()
            img(src="/icons/sin-sobreprecios.png", alt="icono signo peso", class='max-h-20 object-cover mx-auto')
            p(class="text-xl font-semibold pt-4")
              |Sin Sobreprecios 

          div()
            img(src="/icons/atencion-personalizada.png", alt="Icono de conversacion", class='max-h-20 object-cover mx-auto')
            p(class="text-xl font-semibold pt-4")
              |Atencion Personalizada 
